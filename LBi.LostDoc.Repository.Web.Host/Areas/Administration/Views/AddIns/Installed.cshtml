@using LBi.LostDoc.Repository.Web.Areas.Administration.Models
@model LBi.LostDoc.Repository.Web.Host.Areas.Administration.Models.AddInOverviewModel

<section class="package-list">
    <h1>@Model.Title</h1>
    
    <h2>Installed</h2>
    @foreach (var addIn in Model.AddIns)
    {
        Html.RenderPartial("_CompactView", addIn);
    }
    
    @if (Model.AddIns.Length == 0)
    {
        <span>No add-ins installed.</span>
    }
</section>

