@model LBi.LostDoc.Repository.Web.Host.Areas.Administration.Models.IndexDocumentModel

@functions {private string IsActive(string firstUri)
    {
        if (String.IsNullOrWhiteSpace(firstUri))
            return "";
        else
            return "active";
    }

}

@{
    Layout = null;
}


<a class="@IsActive(Model.FirstUri)" href="@Model.FirstUri">First</a>
<a class="@IsActive(Model.PreviousUri)" href="@Model.PreviousUri">Previous</a>
<span>@((Model.Index + 1).ToString("N0")) of @Model.Count.ToString("N0")</span>
<a class="@IsActive(Model.NextUri)" href="@Model.NextUri">Next</a>
<a class="@IsActive(Model.LastUri)" href="@Model.LastUri">Last</a>
<table>
    <thead>
        <tr>
            <th>Field</th>
            <th>Value</th>
            <th>Tokens</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var field in Model.Fields)
        {
            <tr>
                <td>@field.Item1</td>
                <td>@field.Item2</td>
                <td>@string.Join(", ", field.Item3)</td>
            </tr>
        }
    </tbody>
</table>
