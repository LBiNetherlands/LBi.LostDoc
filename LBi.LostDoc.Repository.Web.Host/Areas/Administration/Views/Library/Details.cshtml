@model LBi.LostDoc.Repository.Web.Host.Areas.Administration.Models.LibraryDetailsModel

@{
    Layout = null;
}

<div class="tabs">
    <span>@Model.Created.ToString("yyyy-MM-dd HH:mm:ss")</span>
    <ul>
        <li class="active"><a href="#tabs-1">Source</a></li>
        <li><a href="#tabs-2">Output</a></li>
        <li><a href="#tabs-3">Logs</a></li>
        <li><a href="#tabs-4">Index</a></li>
    </ul>
    <div id="tabs-1">
        @Html.Partial("_ContentRepository", Model.Input)
    </div>
    <div id="tabs-2">
        <div class="output-tree" data-root="@Model.OutputDataUrl" data-view="@Model.OutputViewUrl" data-download="@Model.OutputDownloadUrl"></div>
    </div>
    <div id="tabs-3">
        <div class="log-tree" data-root="@Model.LogDataUrl" data-view="@Model.LogViewUrl" data-download="@Model.LogDownloadUrl"></div>
    </div>
    <div id="tabs-4">

    </div>
</div>

