@using LBi.LostDoc.Repository.Web.Host.Areas.Administration.Models
@model SystemStatusModel

<h1>System Status</h1>
<h2>Queue</h2>
<form>
    <table>
        <thead>
            <tr>
                <th><input type="checkbox" name="all"/></th>
                <th>Created</th>
                <th>Started</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (JobModel job in Model.JobQueue)
            {
                <tr data-job-index="@job.Index">
                    <td>
                        <input type="checkbox" value="@job.Index" name="job" @if(!job.Started.HasValue) {<text>disabled="disabled"</text>}/>
                    </td>
                    <td>@job.Created</td>
                    <td>@job.Started</td>
                    <td>@job.Name</td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" name="clear" value="Remove"/>
</form>

